		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// For Login Request: extract JWT token from response and set it as an environment variable",
					"if (pm.request.url.includes('/login')) {",
					"    var jsonData = pm.response.json();",
					"    if (jsonData && jsonData.token) {",
					"        pm.environment.set(\"YOUR_JWT_TOKEN\", jsonData.token);",
					"        console.log(\"JWT Token set: \" + jsonData.token);",
					"    }",
					"}"
				]
			}
